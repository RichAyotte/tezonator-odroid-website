@import 'variables'

html
	-moz-osx-font-smoothing grayscale
	-ms-text-size-adjust 100%
	-webkit-font-smoothing antialiased
	-webkit-text-size-adjust 100%
	box-sizing border-box
	color brand-grey
	height 100%

*
, *:before
, *:after
	box-sizing border-box
	margin 0

body
	height 100%
	background-color black
	color silver

a
	color: brand-purple
	&:focus
		outline: 1px dashed brand-purple

.button
	background-color brand-purple
	border-color darken(brand-purple, 30%)
	border-radius 5px
	border-style solid
	border-width 2px
	color lighten(brand-purple, 70%)
	display inline-block
	margin 5mm
	padding 3mm
	text-decoration none
	&:hover
		background-color darken(brand-purple, 30%)
